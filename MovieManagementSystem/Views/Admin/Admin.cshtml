@{
    ViewData["Title"] = "Admin";
}

<div>
    <div class="d-flex justify-content-between mb-3">
        <h3 class="p-extrabold">Movie List</h3>
        <a asp-area="" asp-controller="Admin" asp-action="AddMovie" type="button" class="btn bg-darkshade text-lightb p-semibold px-3 py-2">
            Add Movie
        </a>
    </div>
    <div class="card radius">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" class="px-3">Title</th>
                    <th scope="col" class="px-3">Price</th>
                    <th scope="col" class="px-3">Last Day</th>
                    <th scope="col" class="px-3">Status</th>
                    <th scope="col" class="px-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model) {
                    <tr class="align-middle">
                        <th scope="row" class="px-3">@movie.Title</th>
                        <td class="px-3">₱@movie.Price</td>
                        <td class="px-3">@movie.LastDay?.ToShortDateString()</td>
                        <td class="px-3">
                            <span class="@(movie.IsActive == 1 ? "bg-green" : "bg-danger") text-uppercase text-lightb px-3 py-2 rounded-pill">
                                @if (movie.IsActive == 1)
                                {
                                    <span>Active</span>
                                }
                                else
                                {
                                    <span>Inactive</span>
                                }
                            </span>
                        </td>
                        <td class="px-3 d-flex">
                            <a asp-area="" asp-controller="Admin" asp-action="GetMovie" asp-route-id="@movie.MovieId" type="button" class="btn bg-main text-darkshade me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            @* <form method="post" action="@Url.Action("DeleteMovie", "Admin", new { id = movie.MovieId })" onsubmit="return confirm('Are you sure you want to delete this movie?');">
                                <button type="submit" class="btn bg-danger text-lightb">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </form> *@
                            <button type="button" class="btn bg-danger text-lightb delete-movie-btn" data-movie-id="@movie.MovieId">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
