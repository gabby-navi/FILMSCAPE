@model MovieManagementSystem.Models.Data.Movieinfo

@{
    ViewData["Title"] = "Buy Tickets";

    int totalMinutes = @Model.Duration ?? 0;
    int hours = totalMinutes / 60;
    int minutes = totalMinutes % 60;
    string badgeClass = "";

    switch (@Model.Rated)
    {
        case "G":
            badgeClass = "bg-success";
            break;
        case "PG":
            badgeClass = "bg-primary";
            break;
        case "R-13":
            badgeClass = "bg-warning";
            break;
        case "R-16":
            badgeClass = "bg-orange";
            break;
        case "R-18":
            badgeClass = "bg-red";
            break;
        default:
            badgeClass = "bg-secondary";
            break;
    }
}

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index" type="button" class="btn bg-darkshade text-lightb radius">
        Back
    </a>
    <div class="row my-4">
        <div class="col-2">
            <input type="text" class="form-control" id="datepicker" style="cursor: pointer;" disabled>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <img src="@Model.Poster" class="radius w-100 mb-4 img-fluid" style="aspect-ratio: 2/3;" id="moviePoster" />
            <label class="form-label text-uppercase p-semibold">Unit Price</label>
            <div class="bg-darkshade text-lightb p-semibold rounded-pill px-3 py-2 w-25">₱@Model.Price</div>
        </div>
        <div class="col-9 ps-4">
            <form id="buyTickets" method="post">
                <span class="badge rounded-pill @badgeClass py-2 fs-6">@Model.Rated</span>
                <h2 class="my-4 p-semibold" id="movieTitle">@Model.Title</h2>
                <p class="fst-italic">
                    @if (hours > 0)
                    {
                        <span>@hours </span> @((hours > 1) ? "hrs" : "hr")
                        @if (minutes > 0)
                        {
                            <span>@minutes @((minutes > 1) ? "mins" : "min")</span>
                        }
                    }
                    else if (minutes > 0)
                    {
                        <span>@minutes @((minutes > 1) ? "mins" : "min")</span>
                    }
                </p>
                <p>@Model.Description</p>
                <div id="errorMessages"></div>
                <label class="form-label text-uppercase p-semibold mt-3">Showtimes</label>
                <div class="row mb-3">
                    <div class="col-4 d-flex align-items-center">
                        <select class="form-select me-2" aria-label="" name="Showtimes" id="showtimes">
                            @foreach (var showtime in Model.Showtimes)
                            {
                                <option value="@showtime.ShowtimeId">@showtime.Showtime1</option>
                            }
                        </select>
                    </div>
                </div>
                <label class="form-label text-uppercase p-semibold mt-3">Pick A Seat</label>
                <div class="d-flex">
                    <div class="d-flex me-4">
                        <div class="legend me-3 bg-main"></div>
                        <p class="p-semibold">Available</p>
                    </div>
                    <div class="d-flex me-4">
                        <div class="legend me-3 bg-success"></div>
                        <p class="p-semibold">Selected</p>
                    </div>
                    <div class="d-flex me-4">
                        <div class="legend me-3 bg-red"></div>
                        <p class="p-semibold">Occupied</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="card radius text-center">
                            <div class="card-body p-4 d-flex flex-column align-items-center justify-content-center">
                                <span class="bg-darkshade radius w-100 text-lightb text-uppercase mb-4">
                                    Screen
                                </span>
                                @foreach (var row in new[] { "A", "B", "C", "D", "E" })
                                {
                                    <div class="d-flex mb-2" id="buttonContainer">
                                        @for (var i = 1; i <= 10; i++)
                                        {
                                            <button type="button" name="SeatName"
                                                    class="btn legend seat-button @(i == 3 || i == 7 ? "me-5" : "me-2") bg-main"
                                                    value="@($"{row}{i} ")"
                                                onclick="toggleSeats(this)">
                                            </button>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <label class="form-label text-uppercase p-semibold mt-3">Seats</label>
                        <div class="d-flex mb-4" id="selectedValues"></div>
                        <p class="form-label text-uppercase p-semibold mb-4" id="quantityLabel">Quantity: 0</p>
                        <label class="form-label text-uppercase p-semibold">Discount</label>
                        <div class="d-flex" id="discountOptions">
                            <div class="form-check me-4">
                                <input class="form-check-input" type="radio" name="discount" id="none" value="none" checked>
                                <label class="form-check-label" for="none">None</label>
                            </div>
                            <div class="form-check me-4">
                                <input class="form-check-input" type="radio" name="discount" value="pwd" id="pwd">
                                <label class="form-check-label" for="pwd">PWD</label>
                            </div>
                            <div class="form-check me-4">
                                <input class="form-check-input" type="radio" name="discount" value="student" id="student">
                                <label class="form-check-label" for="student">Student</label>
                            </div>
                        </div>
                    </div>
                </div>
                <label class="form-label text-uppercase p-semibold my-3 pt-2">Total Cost</label>
                <h2 class="p-semibold" name="TotalCost" id="totalCost">₱0.00</h2>
                <button type="button" id="checkoutBtn" class="btn bg-darkshade text-lightb radius px-5 py-2 mt-4" 
                onclick="showTicketModal()" data-title="@Model.Title" data-poster="@Model.Poster" data-price="@Model.Price" data-movieid="movieid">
                    Checkout
                </button>
            </form>
            <div class="modal fade" id="ticketModal" tabindex="-1" aria-labelledby="ticketModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content radius">
                        <div class="modal-body d-flex flex-column align-items-end">
                            <button type="button" class="btn-close align-self-end" data-bs-dismiss="modal" aria-label="Close"></button>
                            <div id="ticketDetails"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const unitPrice = @Model.Price;

    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll("input[name='discount']").forEach(function (radio) {
            radio.addEventListener("change", function () {
                var quantity = document.querySelectorAll("#buttonContainer button.bg-green").length;
                var discountOption = document.querySelector("input[name='discount']:checked").value;
                updateTotalCost(unitPrice, quantity, discountOption);
            });
        });

        var initialQuantity = document.querySelectorAll("#buttonContainer button.bg-green").length;
        var initialDiscountOption = document.querySelector("input[name='discount']:checked").value;
        updateTotalCost(unitPrice, initialQuantity, initialDiscountOption);
    });
        
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/site.js"></script>
